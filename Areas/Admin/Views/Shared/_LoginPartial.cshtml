@using Microsoft.AspNetCore.Identity
@using Restaurant.Areas.Admin.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="dropdown">

        @if (SignInManager.IsSignedIn(User))
        {
   
            @* @if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
         {
            <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))">
         }*@
            
            <a class="dropdown-toggle my-2" data-bs-toggle="dropdown" aria-expanded="false" 
            @*asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>*@
           
            
            asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</a>
       

            @if (User.IsInRole("Admin"))
            {
              <ul class="dropdown-menu mr-auto">
                    <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" href="~/Admin/Sitting/index">Manage Sitting</a>
                    <a class="dropdown-item" href="~/Admin/UserRoles/Index">Manage User</a>
                    <a class="dropdown-item" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
                </ul>
            }
            else if (User.IsInRole("Staff"))
            {
                <ul class="dropdown-menu mr-auto">
                    <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
            </ul>
            }
            else if (User.IsInRole("Public"))
            {

                <ul class="dropdown-menu mr-auto">
                    <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" href="~/Reservation/Booking">View Booking</a>
                </ul>
            }
       
            <li class="nav-item mr-auto">
                <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button  type="submit" class="nav-link btn btn-link text-gold">Logout</button>
                </form>
            </li>
        }
  
    else
    {
        <li class="nav-item" style="align-self: right;">
            <a class="nav-link text-grey"  asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-grey" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
