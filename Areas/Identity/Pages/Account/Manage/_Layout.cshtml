      <!--START SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#">
          <i class="fa fa-angle-up"></i>
    </a>
      <!-- END SCROLL TOP BUTTON -->
    <!-- Start header section -->
      <header>
  
        <nav class="navbar navbar-expand-sm mu-main-navbar" role="navigation">
   
            <div class="container">
                        <div class="navbar-header">
                              <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                              </button>

                              <!-- LOGO -->
 
                    <!--  Text based logo  -->
                              <a class="navbar-brand" href="">Bean Scene<span>X</span></a>

                    <!--  Image based logo  -->

                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                              <ul id="top-menu" class="nav navbar-nav navbar-right mu-main-nav">
                               </ul>
                    </div>

                     @if (SignInManager.IsSignedIn(User))
                {
                               <div class="dropdown">
                                    <button class="dropbtn" onclick="myFunction()">
                                        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</a>
                                           <i class="fa fa-caret-down"></i>
                                    </button>                    
                          
                      @if (User.IsInRole("Admin"))
                        {
                             <div class="dropdown-content" id="myDropdown">
                                <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                                <a class="dropdown-item" href="~/Admin/Sitting/index">Manage Sitting</a>
                                <a class="dropdown-item" href="~/Admin/UserRoles/Index">Manage User</a>
                                <a class="dropdown-item" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
                                <a href="~/Identity/Account/Logout">Logout</a>
                            </div>
                        }
                      else if (User.IsInRole("Staff"))
                        {
                            <div class="dropdown-content" id="myDropdown">
                                <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                                <a class="dropdown-item" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
                                <a href="~/Identity/Account/Logout">Logout</a>
                            </div>
                         }
                      else if (User.IsInRole("Public"))
                        {

                            <div class="dropdown-content" id="myDropdown">
                                <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                                <a class="dropdown-item" href="~/Reservation/Booking">View Booking</a>
                                <a href="~/Identity/Account/Logout">Logout</a>
                            </div>
                        }
                   </div>
                }

            </div>
                   

            </div>
        </nav>
       </header>
      <!-- End header section -->

