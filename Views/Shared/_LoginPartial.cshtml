@using Microsoft.AspNetCore.Identity
@using Restaurant.Areas.Admin.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="dropdown">

        @if (SignInManager.IsSignedIn(User))
    {
        <a class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" 
            asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</a>
            
            @if (User.IsInRole("Admin"))
            {
              <ul class="dropdown-menu" id="Admin">
                    <a class="dropdown-item" id="Account" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" id="Sitting" href="~/Admin/Sitting/index">Manage Sitting</a>
                    <a class="dropdown-item" id="User" href="~/Admin/UserRoles/Index">Manage User</a>
                    <a class="dropdown-item" id="Reservation" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
                </ul>
            }
            else if (User.IsInRole("Staff"))
            {
                <ul class="dropdown-menu" id="Staff">
                    <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" href="~/Admin/Reservation/ListReservations">Manage Reservation</a>
                </ul>
            }
            else if (User.IsInRole("Public"))
            {

                <ul class="dropdown-menu" id="Public">
                    <a class="dropdown-item" href="~/Identity/Account/Manage/Index">Manage Account</a>
                    <a class="dropdown-item" href="~/Reservation/Booking">View Booking</a>
                </ul>
            }

            <li class="nav-item">
                <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button  type="submit" class="nav-link btn btn-link text-gold">Logout</button>
                </form>
            </li>
        }
    



    else
    {
        <li class="nav-item" style="align-self: right;">
            <a class="nav-link text-grey"  asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-grey" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
